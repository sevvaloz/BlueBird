<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:longClickable="false"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/recycler_row_pp"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                </ImageView>


                <TextView
                    android:id="@+id/recycler_row_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="User Name"
                    android:textColor="#F44336"
                    android:textSize="16sp">

                </TextView>

        </LinearLayout>


        <TextView
            android:id="@+id/recycler_row_tweet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:text="Tweet"
            android:textColor="#4CAF50"
            android:textSize="15sp"></TextView>


        <TextView
            android:id="@+id/recycler_row_tweet_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:text="date"
            android:textColor="?android:textColorPrimary"
            android:textSize="11dp"></TextView>

        <TextView
            android:id="@+id/recycler_row_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:onClick="DeleteTweet"
            android:text="DELETE"
            android:textColor="?android:textColorPrimary"
            android:textSize="11dp"></TextView>


</LinearLayout>

